#!/usr/bin/env bash

# Source the script 'common-functions.sh'.
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
ROOT_DIR=$(grep --only-matching "^.*scripts[^/]*" <<<"$SCRIPT_DIR")
source "$ROOT_DIR/common-functions.sh"

_main() {
    local input_files=""
    local std_output=""

    # Execute initial checks.
    _check_dependencies "jdupes"
    _display_wait_box
    input_files=$(_get_files "type:directory, get_pwd_if_no_selection:true")

    # Run the main process.
    # shellcheck disable=SC2086
    std_output=$(jdupes --recurse -- $input_files 2>/dev/null)
    # NOTE: Older versions of 'jdupes' do not support '-X nostr:/.git/'.
    std_output=$(grep -v "/\.git/" <<<"$std_output")
    std_output=$(sed ':a;N;$!ba;s/\n\{2,\}/\n\n/g' <<<"$std_output") # Remove multiple empty lines
    std_output=$(_text_remove_pwd "$std_output")

    _display_text_box "$std_output"
}

_main "$@"
