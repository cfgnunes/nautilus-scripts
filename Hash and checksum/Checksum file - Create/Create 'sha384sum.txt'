#!/usr/bin/env bash

# Source the script 'common-functions.sh'.
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
ROOT_DIR=$(grep --only-matching "^.*scripts[^/]*" <<<"$SCRIPT_DIR")
source "$ROOT_DIR/common-functions.sh"

_main() {
    local input_files=""
    local output_dir=""

    # Execute initial checks.
    _check_dependencies ""
    _display_wait_box
    input_files=$(_get_files "type:file, recursive:true")
    output_dir=$(_get_output_dir "use_same_dir:true")

    # Execute the function '_main_task' for each file in parallel.
    _run_task_parallel "$input_files" "$output_dir"

    local compiled_output_file=""
    compiled_output_file=$(_get_filename_next_suffix "$output_dir/sha384sum.txt")
    cat -- "$TEMP_DIR_TASK/"* 2>/dev/null >"$compiled_output_file" # Compile all results into a single output.

    _display_result_box "$output_dir"
}

_main_task() {
    local input_file=$1
    local output_dir=$2
    local output_file=""
    local std_output=""

    # Run the main process.
    output_file=$(mktemp --tmpdir="$TEMP_DIR_TASK")
    std_output=$(sha384sum -- "$input_file" 2>/dev/null)
    std_output=$(_strip_filename_pwd "$std_output")

    echo "$std_output" >"$output_file"
}

_main "$@"
