#!/usr/bin/env bash

# Source the script 'common-functions.sh'.
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
ROOT_DIR=$(grep --only-matching "^.*scripts[^/]*" <<<"$SCRIPT_DIR")
source "$ROOT_DIR/common-functions.sh"

# Execute initial checks.
_check_dependencies ""
_display_wait_box
input_files=$(_get_files "type:file, min_files:1, max_files:1, mime:text/")
output_dir=$PWD

_verify_checksum() {
    local line=$1
    local saved_checksum=""
    local saved_size=""
    local file=""
    local current_output=""
    local current_checksum=""
    local current_size=""

    output_file=$(mktemp --tmpdir="$TEMP_DIR_TASK")

    saved_checksum=$(echo "$line" | cut -d " " -f1)
    saved_size=$(echo "$line" | cut -d " " -f2)
    file=$(echo "$line" | cut -d " " -f3- | sed "s|\r|'|g")

    # If the file does not exist, report and skip the check.
    if [[ ! -e "$file" ]]; then
        echo "[FAILED] No such file: $file" >>"$output_file"
        return 1
    fi

    current_output=$(cksum -- "$file" 2>/dev/null)
    current_checksum=$(echo "$current_output" | cut -d " " -f1)
    current_size=$(echo "$current_output" | cut -d " " -f2)

    # Compare the checksum.
    if [[ "$saved_checksum" != "$current_checksum" || "$saved_size" != "$current_size" ]]; then
        echo "[FAILED] Mismatch checksum for the file: $file. Saved: $saved_checksum $saved_size. Current: $current_checksum $current_size." >>"$output_file"
        return 1
    fi

    return 0
}

cd "$output_dir" || _exit_script

export -f _verify_checksum
export TEMP_DIR_TASK
sed "s|'|\r|g" "$input_files" | xargs --max-procs="$(_get_max_procs)" --replace="{}" bash -c "_verify_checksum '{}'"

std_output=$(cat -- "$TEMP_DIR_TASK/"* 2>/dev/null) # Compile all results into a single output.

if [[ -z "$std_output" ]]; then
    std_output="No errors found."
fi

_display_text_box "$std_output"
