#!/usr/bin/env bash

# Source the script 'common-functions.sh'.
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
ROOT_DIR=$(grep --only-matching "^.*scripts[^/]*" <<<"$SCRIPT_DIR")
source "$ROOT_DIR/common-functions.sh"

_main() {
    local input_files=""
    local output_dir=""

    # Execute initial checks.
    _check_dependencies "pdfunite(apt:poppler-utils,pacman:poppler-glib,dnf:poppler-utils)"
    _display_wait_box
    input_files=$(_get_files "type:file, mime:application/pdf, min_files:2")
    output_dir=$(_get_output_dir "use_same_dir:false")

    _main_task_multiple_files "$input_files" "$output_dir"
    _display_result_box "$output_dir"
}

_main_task_multiple_files() {
    local input_files=$1
    local output_dir=$2
    local output_file=""
    local std_output=""

    # Run the main process.
    output_file="$output_dir/combined-documents.pdf"
    output_file=$(_get_output_file "$output_file" "$output_dir" "extension_option:copy")
    # shellcheck disable=SC2086
    std_output=$(pdfunite -- $input_files "$output_file" 2>&1)
    _check_result "$?" "$std_output" "" "$output_file" || return 1
}

_main "$@"
