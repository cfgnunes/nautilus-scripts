#!/usr/bin/env bash

# Source the script 'common-functions.sh'.
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
ROOT_DIR=$(grep --only-matching "^.*scripts[^/]*" <<<"$SCRIPT_DIR")
source "$ROOT_DIR/common-functions.sh"

_main() {
    local input_files=""
    local output_dir=""

    # Execute initial checks.
    _check_dependencies "convert(apt:imagemagick,pacman:imagemagick,dnf:ImageMagick)"
    _display_wait_box
    input_files=$(_get_files "type:file, mime:image/, min_files:2")
    output_dir=$(_get_output_dir "use_same_dir:true")

    _main_task "$input_files" "$output_dir"
    _display_result_box "$output_dir"
}

_main_task() {
    local input_files=$1
    local output_dir=$2
    local output_file=""
    local std_output=""

    # Run the main process.
    output_file=$(_get_filename_next_suffix "$output_dir/Animated image.gif")
    output_file=$(_get_output_filename "$output_file" "$output_dir" "extension_opt:preserve")
    # shellcheck disable=SC2086
    std_output=$(convert -delay 100 -loop 0 -- $input_files "$output_file" 2>&1)
    _check_result "$?" "$std_output" "" "$output_file" || return 1
}

_main "$@"
